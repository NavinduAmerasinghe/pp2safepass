{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js", // Path to your server entry point
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", // Route requests to your API routes
      "dest": "/backend/routes/$1"
    },
    {
      "src": "/(.*)", // Catch-all route for serving the SPA or other content
      "dest": "/backend/server.js"
    }
  ]
}
